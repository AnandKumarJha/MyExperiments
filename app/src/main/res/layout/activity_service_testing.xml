<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".service_testing.ServiceTestingActivity">

    <Button
            android:text="Intent Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_intent_service"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Bounded Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_bounded_service"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_intent_service"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Unbounded Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_unbounded_service"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_unbind_service"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.513"/>
    <Button
            android:text="ForegroundService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_foreground_service"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_unbounded_service"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
    />
    <Button
            android:text="Aidl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_aidl"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_foreground_service"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="Get Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_get_service_data"
            app:layout_constraintStart_toEndOf="@+id/btn_bounded_service" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_intent_service"/>
    <Button
            android:text="Unbind service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_unbind_service" app:layout_constraintStart_toEndOf="@+id/btn_get_service_data"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_intent_service" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Stop Fg Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnStopFgService" app:layout_constraintStart_toEndOf="@+id/btn_foreground_service"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_unbounded_service" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_aidl"/>
</androidx.constraintlayout.widget.ConstraintLayout>